@model IEnumerable<HRMS.Core.ReqRespVm.Response.Master.EmployeeAssetsDetails>


<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">

    <div class="dataTables_wrapper" role="grid">


        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" id="example" style="border-collapse:collapse;" aria-describedby="cp_MainContent_widgetExitEmployee_grdExitEmployees_info">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>EmployeeName</th>
                    <th>Branch</th>
                    <th>CategoryAssetsName</th>
                    <th>EmployeeAssetsName</th>
                    <th>AssetsTag</th>
                    <th>AssetsStatus</th>
                    <th>Category</th>
                    <th>DongleNumber</th>
                    <th>MEID</th>
                    <th>SerialNumber</th>
                    <th>ModelNumber</th>
                    <th>Make</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                <tr class="@trclass">
                    <td align="left" style="width:5%;" class="sorting_1">
                        @count
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.EmployeeDetailsName
                    </td>
                    <td align="left" style="width:15%;" class="sorting_1">
                        @data.Branch
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.CategoryAssetsName
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.Name
                    </td>

                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.AssetsTag
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.AssetsStatus
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.Category
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.DongleNumber
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.MEID
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.SerialNumber
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.ModelNumber
                    </td>
                    <td align="left" style="width:25%;" class="sorting_1">
                        @data.Make
                    </td>
                   




                    <td align="center" style="width:15%;" class="sorting_1">
                        <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecordHolidays(@data.EmployeeAssetId, this)">
                            <span class="fa fa-pencil "></span>
                        </a>
                        <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.EmployeeAssetId, this)"><i class="fa fa-ban"></i></a>



                    </td>
                </tr>
                    count++;
                }

            </tbody>
        </table>

    </div>


</div>


<script>
    $('#example').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>