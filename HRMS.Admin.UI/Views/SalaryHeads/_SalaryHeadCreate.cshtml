@model HRMS.Core.Entities.Master.SalaryHeads

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<style>
    
</style>
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete"
      asp-action="UpsertSalaryHeads" asp-controller="SalaryHeads" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <input asp-for="FinancialYear" type="hidden" />
                        <label asp-for="HeadName">Head Name</label><span style="color:red">  *</span>
                        <input type="text" class="form-control" asp-for="HeadName" />
                        <span asp-validation-for="HeadName" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="HeadCode">Head Code</label>
                        <input asp-for="HeadCode" class="form-control" />
                        <span asp-validation-for="HeadCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IsDependOnDay">IsDepend on Day</label><span style="color:red">  *</span>
                        <select asp-for="IsDependOnDay" class="form-control">
                            <option value="">--Select--</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="IsDependOnDay" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="HeadType">Head Type</label><span style="color:red">  *</span>
                        <select asp-for="HeadType" class="form-control">
                            <option value="">--Select--</option>
                            <option value="A">Addition</option>
                            <option value="D">Deduction</option>
                        </select>
                        <span asp-validation-for="HeadType" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IsDisplayOnPaySlip">Display on payslip</label><span style="color:red">  *</span>
                        <select asp-for="IsDisplayOnPaySlip" class="form-control">
                            <option value="">--Select--</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                        <span asp-validation-for="IsDisplayOnPaySlip" class="text-danger"></span>
                    </div>
                </div>


            </div>
        </div>

    </div>
    <div class="modal-footer">


        <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>