<script>
    function GetSalaryHeads() {
        GetCustomRecord("/SalaryHeads/GetSalaryHeadList", "divHRMS")
    }

    $(document).ready(function () {
        GetSalaryHeads();
    })

    function AddRecord() {
        NewCustomRecord("/SalaryHeads/CreateSalaryHead", "Create Salary Heads")
    }

    function Delete(id, eData) {
        CustomDeleteRecord(id, "/SalaryHeads/GetSalaryHeadList", "/SalaryHeads/DeleteSalaryHead", eData);
    }

    function UpdateRecord(id) {
        UpdateCustomRecord(id, "/SalaryHeads/CreateSalaryHead",  "Update Salary Heads");
    }
</script>

