@model HRMS.Core.Entities.Organisation.Branch

 

<div class="content-wrapper" style="min-height: 870px;">
    <section class="content-header">
       
        <ol class="breadcrumb">
            <li>Home</li>
            <li class="active">Index</li>
        </ol>
    </section>
    <section class="content">
        <div>
            <div>

                <div>

                    <div class="row">

                        <div class="col-md-8">
                            <div class="row" style="margin-top:0;">
                                <div class="col-md-12 col-sm-12">
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <div class="box-title">
                                                <h3 class="box-title pull-left"> List of  @ViewBag.HeaderTitle</h3>

                                            </div>
                                            <a class="btn btn-primary pull-right btn-xs" onclick="AddRecord()" title="Add New Branch">
                                                <i class="fa fa-plus"> &nbsp; Add</i>
                                            </a>
                                        </div>
                                        <div class="box-body">
                                            <div id="divHRMS">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
</div>

<script>
    function GetBranchListList() {
        GetCustomRecord("/Branch/GetBranchList", "divHRMS")
    }

    $(document).ready(function () {
        GetBranchListList();
    })

    function AddRecord() {
        NewCustomRecord("/Branch/CreateBranch", "Create Branch")
    }

    function Delete(id, eData) {
        CustomDeleteRecord(id, "/Designation/GetDesignationList", "/Designation/DeleteDepartment", eData);
    }

    function UpdateRecord(id) {
        UpdateCustomRecord(id, "/Branch/CreateBranch",  "Update Branch");
    }
</script>

