@model IEnumerable<HRMS.Core.ReqRespVm.Response.Master.BranchDetails>
<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">

    <div class="dataTables_wrapper" role="grid">


        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" id="example" style="border-collapse:collapse;" aria-describedby="cp_MainContent_widgetExitEmployee_grdExitEmployees_info">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>Company Name</th>
                    <th>Branch Name</th>
                    <th>Code</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Zip Code</th>
                    <th>Contact Person</th>
                    <th>Logo</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                <tr>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @count
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.CompanyName
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Name
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Code
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Address
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Email
                    </td>

                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Phone
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.ZipCode
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.ContactPerson
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">

                        <a href="@data.Logo" target="_blank"><i class="fa fa-download"></i></a>
                    </td>
                    <td align="center" style="width:10%;" class="sorting_1">
                        <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.BranchId, this)">
                            <span class="fa fa-pencil "></span>
                        </a>
                        <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.BranchId, this)">
                            <i class="fa fa-ban"></i>
                        </a>
                    </td>
                </tr>
                    count++;
                }

            </tbody>
        </table>

    </div>


</div>
<script>
        $('#example').dataTable({
            "iDisplayLength": 10,
            "bDestroy": true,
            "scrollX": true,
            "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
</script>