@model HRMS.Core.Entities.UserManagement.ModuleMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
 
    <form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
          data-ajax-complete="AjaxComplete"
          asp-action="UpsertModule" asp-controller="ModuleMaster" data-ajax-success="Success">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <label asp-for="ModuleName">Module Name</label><span style="color:red">  *</span>
                        <input type="text" class="form-control" asp-for="ModuleName" />
                        <span asp-validation-for="ModuleName" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ControllerName">Controller Name</label><span style="color:red">  *</span>
                        <input asp-for="ControllerName" class="form-control" />
                        <span asp-validation-for="ControllerName" class="text-danger"></span>
                    </div>
                </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ActionName">Action Name</label><span style="color:red">  *</span>
                            <input asp-for="ActionName" class="form-control" />
                            <span asp-validation-for="ActionName" class="text-danger"></span>
                        </div>
                    </div>
               

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModuleIcon">Icon (fa Class)</label><span style="color:red">  *</span>
                        <input asp-for="ModuleIcon" class="form-control" />
                        <span asp-validation-for="ModuleIcon" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
            <input type="submit" class="btn btn-primary  " value="Save" />
        </div>
    </form>
    