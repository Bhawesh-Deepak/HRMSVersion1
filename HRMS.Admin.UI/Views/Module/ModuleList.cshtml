@model IEnumerable<HRMS.Core.Entities.UserManagement.ModuleMaster>

  
<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table id="tblDataList" class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" style="border-collapse:collapse;">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>Module Name</th>
                    <th>Controller Name</th>
                    <th>Action Name</th>
                    <th>Icon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                <tr class="@trclass">
                    <td align="left" style="width:5%;" class="sorting_1">
                        @count
                    </td>
                    <td align="left" style="width:20%;" class="sorting_1">
                        @data.ModuleName
                    </td>
                    @*<td align="left" style="width:20%;" class="sorting_1">
                        @data.ControllerName
                    </td>
                    <td align="left" style="width:20%;" class="sorting_1">
                        @data.ActionName
                    </td>*@
                    <td align="left" style="width:20%;" class="sorting_1">
                        <span class="@data.ModuleIcon"></span>
                    </td>
                    <td align="center" style="width:10%;" class="sorting_1">
                        <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.Id, this)">
                            <span class="fa fa-pencil "></span>
                        </a>
                        <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.Id, this)"><i class="fa fa-ban"></i></a>

                    </td>
                </tr>
                    count++;
                }
            </tbody>

        </table>
    </div>
</div>

<script>
    $('#tblDataList').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>