@model IEnumerable<HRMS.Core.Entities.UserManagement.ModuleMaster>
<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table id="tblDataList" class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" style="border-collapse:collapse;">
            <thead>
                <tr>
                    <th>Module Name</th>
                    <th>Controller Name</th>
                    <th>Action Name</th>
                    <th>Icon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                <tr>
                    <td>
                        @data.ModuleName
                    </td>
                    <td>
                        @data.ControllerName
                    </td>
                    <td>
                        @data.ActionName
                    </td>
                    <td>
                        @data.ModuleIcon
                        <span class="@data.ModuleIcon"></span>
                    </td>

                    <td align="center" style="width:10%;" class="sorting_1">
                        <a class="btn btn-outline-success btn-xs" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.Id, this)">
                            <i class="fa fa-edit" style="color:#3C8DBC"></i>
                        </a>
                        <a class="btn btn-outline-danger btn-xs" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="Delete(@data.Id, this)">
                            <i class="fa fa-trash" style="color:#DD4B39"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script>
    $('#tblDataList').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>