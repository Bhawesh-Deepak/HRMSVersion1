@model HRMS.Core.Entities.UserManagement.SubModuleMaster
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
        data-ajax-complete="AjaxComplete"
        asp-action="UpSertSubModule" asp-controller="SubModule" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedBy" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    <label asp-for="ModuleId">  Module Name</label><span style="color:red">  *</span>
                    <select type="text" class="form-control" asp-for="ModuleId" asp-items="@(new SelectList(ViewBag.Module ,"Id","ModuleName"))">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="ModuleId" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SubModuleName">Sub Module Name </label><span style="color:red">  *</span>
                    <input asp-for="SubModuleName" class="form-control" />
                    <span asp-validation-for="SubModuleName" class="text-danger"></span>
                </div>
            </div>
        </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @*<label asp-for="ControllerName">Controller Name</label><span style="color:red">  *</span>
                        <input asp-for="ControllerName" class="form-control" />
                        <span asp-validation-for="ControllerName" class="text-danger"></span>*@
                    </div>
                </div>
       

            <div class="col-md-6">
                <div class="form-group">
                    @*<label asp-for="ActionName">Action Name</label><span style="color:red">  *</span>
                    <input asp-for="ActionName" class="form-control" />
                    <span asp-validation-for="ActionName" class="text-danger"></span>*@
                </div>
            </div>
           </div>
         
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SubModuleIcon">Icon (fa class)</label><span style="color:red">  *</span>
                        <input asp-for="SubModuleIcon" class="form-control" />
                        <span asp-validation-for="SubModuleIcon" class="text-danger"></span>
                    </div>
                </div>
            </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>