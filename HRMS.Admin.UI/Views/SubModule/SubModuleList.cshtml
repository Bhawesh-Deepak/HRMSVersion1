@model IEnumerable<HRMS.Core.ReqRespVm.Response.UserManagement.SubModuleVm>

<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table id="tblDataList" class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" style="border-collapse:collapse">
            <thead>
                <tr class="th-primary" role="row">
                    <th>Module Name</th>
                    <th>SubModule Name</th>
                    <th>Coontroller</th>
                    <th>Action Name</th>
                    <th>Icon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            @data.ModuleName
                        </td>
                        <td>
                            @data.SubModuleName
                        </td>
                        <td>
                            @data.Controller
                        </td>
                        <td>@data.Action</td>
                        <td>
                            <span class="@data.Icon"></span>
                        </td>
                        <td align="center" style="width:10%;" class="sorting_1">
                            <a class="btn btn-outline-success pull-right btn-xs" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>"
                               onclick="UpdateRecord(@data.SubModuleId, this)">
                                <i class="fa fa-edit" style="color:#3C8DBC"></i>

                            </a>

                            <a class="btn btn-outline-danger pull-right btn-xs" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="Delete(@data.SubModuleId, this)">
                                <i class="fa fa-trash" style="color:#DD4B39"></i>

                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#tblDataList').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>