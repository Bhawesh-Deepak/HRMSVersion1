@model IEnumerable<HRMS.Core.ReqRespVm.Response.UserManagement.SubModuleVm>

<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table id="tblDataList" class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" style="border-collapse:collapse">
            <thead>
                <tr class="th-primary" role="row">

                    <th>Module Name</th>
                    <th>Sub Module Name</th>
                    <th>Controller Name</th>
                    <th>Action Name</th>
                    <th>Icon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                    <tr class="@trclass">

                        <td align="left" style="width:20%;" class="sorting_1">
                            <a href="javascript:void(0)" onclick="GetSubModule(@data.ModuleId)"><i class="fa fa-plus-square fa-lg"></i>   @data.ModuleName</a>

                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            @data.SubModuleName
                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            @data.Controller
                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">@data.Action</td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            <span class="@data.Icon"></span>
                        </td>
                        <td align="center" style="width:10%;" class="sorting_1">
                            <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.SubModuleId, this)">
                                <span class="fa fa-pencil "></span>
                            </a>
                            <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.SubModuleId, this)"><i class="fa fa-ban"></i></a>

                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>

