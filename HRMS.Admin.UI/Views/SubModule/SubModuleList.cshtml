@model IEnumerable<HRMS.Core.ReqRespVm.Response.UserManagement.SubModuleVm>

<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table id="tblDataList" class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" style="border-collapse:collapse">
            <thead>
                <tr class="th-primary" role="row">

                    <th>Module Name</th>
                    <th>Sub Module Name</th>
                    <th>Controller Name</th>
                    <th>Action Name</th>
                    <th>Icon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model.GroupBy(x => x.ModuleId))
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                    <tr class="@trclass">

                        <td align="left" style="width:20%;" class="sorting_1">
                            <a href="javascript:void(0)" onclick="GetSubModule(@data.First().ModuleId)"><i class="fa fa-plus-square fa-lg"></i>   @data.First().ModuleName</a>

                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            @data.First().SubModuleName
                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            @data.First().Controller
                        </td>
                        <td align="left" style="width:20%;" class="sorting_1">@data.First().Action</td>
                        <td align="left" style="width:20%;" class="sorting_1">
                            <span class="@data.First().Icon"></span>
                        </td>
                        <td align="center" style="width:10%;" class="sorting_1">
                            <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.First().SubModuleId, this)">
                                <span class="fa fa-pencil "></span>
                            </a>
                            <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.First().SubModuleId, this)"><i class="fa fa-ban"></i></a>

                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function GetSubModule(ModuleId) {
        $.get("/SubModule/GetSubModule", {
            Id: ModuleId
        }, function (data) {
            var row = '';
            for (var i = 0; i < data.length; i++) {
                debugger;
                row += "<tr>" +
                    "<td>" + data[i].moduleName + "</td>" +
                    "<td>" + data[i].subModuleName + "</td>" +
                    "<td>" + data[i].controller + "</td>" +
                    "<td>" + data[i].action + "</td>" +
                    "<td> <span class=" + data[i].icon + "></span></td>" +
                    "<td> </td>" +
                    "</tr >";
            }
            var i = 0;
            $('#tblDataList > tbody > tr:eq(' + i + ')').after(row);

        });
    }


    $('#tblDataList').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>