@model HRMS.Core.Entities.Master.RoleMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<style>
   
</style>
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete"
      asp-action="UpsertRole" asp-controller="RoleMaster" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <label asp-for="RoleName">Role Name</label><span style="color:red">  *</span>
                        <input type="text" class="form-control" asp-for="RoleName" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                </div>
               

                <div class="col-md-6">
                    <div class="form-group">
                            <label asp-for="RoleDescription">Description</label>
                            <input asp-for="RoleDescription" class="form-control" />
                            <span asp-validation-for="RoleDescription" class="text-danger"></span>
                       
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">


        <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>