@model HRMS.Core.Entities.Master.RoleMaster

<div class="content-wrapper" style="min-height: 870px;">
    <section class="content-header">
     
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>
    <section class="content">
        <div>
            <div>

                <div>

                    <div class="row">

                        <div class="col-md-8">
                            <div class="row" style="margin-top:0;">
                                <div class="col-md-12 col-sm-12">
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <div class="box-title">
                                                <h3 class="box-title pull-left">List of @ViewBag.HeaderTitle</h3>

                                            </div>
                                            <a class="btn btn-primary pull-right" onclick="AddRecord()">
                                                <i class="fa fa-plus-square"> &nbsp; Add</i>
                                            </a>
                                        </div>
                                        <div class="box-body">
                                            <div id="divHRMS">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
</div>


<script>
    function GetRecord() {
        GetCustomRecord("/RoleMaster/GetRoleDetail", "divHRMS")
    }

    $(document).ready(function () {
        GetRecord();
    })

    function AddRecord() {
        NewCustomRecord("/RoleMaster/CreateRole", "Create Role Detail")
    }

    function Delete(id, eData) {
        CustomDeleteRecord(id, "/RoleMaster/GetRoleDetail", "/RoleMaster/DeleteRole", eData);
    }

    function UpdateRecord(id) {
        UpdateCustomRecord(id, "/RoleMaster/CreateRole",  "Update Role Detail");
    }
</script>

