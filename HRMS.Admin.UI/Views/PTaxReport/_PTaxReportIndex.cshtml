@model HRMS.Core.ReqRespVm.RequestVm.EmployeeSalaryRegisterVM

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="content-wrapper" style="min-height: 870px;">
    @*@Html.BuildBreadcrumbNavigation()*@
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li>Compliance</li>
        <li><a asp-action="Index" asp-controller="PTaxReport">P Tax Register</a></li>
    </ol>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="margin-top:0;">
                    <div class="col-md-12 col-sm-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <div class="box-title">
                                    <i class="fa fa-cloud-download fa-lg text-primary"></i> &nbsp; Profession Tax Report
                                </div>
                            </div>
                            <div class="box-body">
                                <form id="form" method="post"
                                      enctype="multipart/form-data"
                                      asp-action="DownloadPTaxReport" asp-controller="PTaxReport">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label asp-for="Name">  State :</label>
                                                        <select class="form-control input-sm" asp-for="Name" asp-items="@(new SelectList(ViewBag.StateList ,"Name","Name"))">
                                                            <option value="">--Select--</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label asp-for="DateMonth"> Month :</label><em class="text-danger">*</em>
                                                        <select class="form-control input-sm" asp-for="DateMonth" asp-items="@(Enumerable.Range(1, 12).Select(x => new SelectListItem { Value = x.ToString(), Text = System.Globalization.CultureInfo.InvariantCulture.DateTimeFormat.GetMonthName(x) }))">
                                                            <option value="">----Select One----</option>
                                                        </select>
                                                        <span asp-validation-for="DateMonth" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label asp-for="DateYear">Year :</label><em class="text-danger">*</em>
                                                        <select class="form-control input-sm" asp-for="DateYear" asp-items="@(new SelectList(ViewBag.AssesmentYearList ,"StartYear","StartYear"))">
                                                            <option value="">----Select One----</option>
                                                        </select>
                                                        <span asp-validation-for="DateYear" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group text-center">
                                                        <label for="Action">Action:</label><br />
                                                        <button type="submit" class="btn btn-primary btn-sm" title="Export P Tax Report"><i class="fa fa-download"></i> Export</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>