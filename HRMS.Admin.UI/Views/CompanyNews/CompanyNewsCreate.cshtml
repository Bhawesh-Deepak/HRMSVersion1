@model HRMS.Core.Entities.Master.CompanyNews
   
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
     
    <form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
          data-ajax-complete="AjaxComplete"
          asp-action="UpsertCompanyNews" asp-controller="CompanyNews" data-ajax-success="Success">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepartmentId">Department</label><span style="color:red">  *</span>
                            <select class="form-control"  asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Department ,"Id","Name"))">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="CreatedBy" type="hidden" />
                            <input asp-for="CreatedDate" type="hidden" />
                            <input asp-for="FinancialYear" type="hidden" />
                            <label asp-for="Name">News Name</label><span style="color:red">  *</span>
                            <input type="text" class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NewsDate">News Date</label><span style="color:red">  *</span>
                            <input asp-for="NewsDate" class="form-control" />
                            <span asp-validation-for="NewsDate" class="text-danger"></span>
                        </div>
                    </div>



                </div>
            </div>

        </div>
        <div class="modal-footer">


            <button type="button" class="btn btn-primary btn-close" onclick="HidePopUp();">Close</button>
            <input type="submit" class="btn btn-primary  " value="Save" />
        </div>
    </form>
     