@model HRMS.Core.Entities.Payroll.EmployeeDetail

<div class="col-md-4">
    <div class="row" style="margin-top:0;">
        <div class="col-md-12 col-sm-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <div class="box-title">
                        <h3 class="box-title pull-left"><i class="fa fa-user fa-lg"></i>     Employee Detail</h3>

                    </div>

                </div>
                <div class="box-body">
                    <div class="table-fixed-header has-v-scroll _done">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="profile-container">
                                    <div class="profile-header row">
                                        <div class="col-lg-12 text-center">
                                            <img src="@Model.ProfilePic" alt="" class="header-avatar">
                                        </div>
                                    </div>
                                    <div class="profile-body">
                                        <br />
                                        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable">
                                            <tbody>
                                                <tr>
                                                    <td>Name : @Model.EmployeeName</td>
                                                </tr>
                                                <tr>
                                                    <td>Code : @Model.EmpCode</td>
                                                </tr>
                                                <tr>
                                                    <td>Legal Entity : @Model.LegalEntity</td>
                                                </tr>
                                                <tr>
                                                    <td>Department : @Model.DepartmentName</td>
                                                </tr>
                                                <tr>
                                                    <td>Designation : @Model.DesignationName</td>
                                                </tr>
                                                <tr>
                                                    <td>Branch : @Model.BranchOfficeId</td>
                                                </tr>
                                                <tr>
                                                    <td>PAN : @Model.OfficeEmailId</td>
                                                </tr>
                                                <tr>
                                                    <td>Aadhar : @Model.AadharCardNumber</td>
                                                </tr>
                                                <tr>
                                                    <td>DOJ :@string.Format("{0:dd/MM/yyyy}", @Model.JoiningDate)</td>
                                                </tr>
                                                <tr>
                                                    <td>Team Leader : @Model.SuperVisorCode</td>
                                                </tr>
                                                <tr>
                                                    <td>Email ID  : @Model.OfficeEmailId</td>
                                                </tr>
                                                <tr>
                                                    <td>Mobile : @Model.ContactNumber</td>
                                                </tr>
                                                <tr>
                                                    <td>Alternate Mobile: @Model.AlternateMobileNumber</td>
                                                </tr>
                                                <tr>
                                                    <td>Exit Date : @string.Format("{0:dd/MM/yyyy}",Model.ExitDate)</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        Status :
                                                        @if (@Model.IsActive == true && Model.IsDeleted == false)
                                                        {
                                                            @: Active
                                                        }

                                                        else
                                                        {
                                                            @:In-Active
                                                        }
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>