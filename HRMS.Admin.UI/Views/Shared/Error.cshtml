@{
    Layout = null;
    ViewData["Title"] = "Error";
}

<div class="modal fade" id="divErrorModal" role="dialog" style="overflow:auto">
    <div class="modal-dialog modal-dialog-centered  modal-md" style="width:90%">
        <div class="modal-content" id="modalContent">
            <div class="modal-header">
                <button type="button" class="close TopMar16" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <a id="modalTitle">Error Occured !!!</a>
                </h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <fieldset class="fieldset marB0">
                            <div>
                                <h4>
                                    There is some connection problem, Please check your connection and proceed.
                                    If the error continue, Please contact your Admin Department regarding  this issue.
                                </h4>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Cancel</a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Mail Issue</a>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#divErrorModal").modal('show');
    })
</script>