@model HRMS.Core.Entities.Posting.ReferCandidate

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<style>
</style>
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete" enctype="multipart/form-data"
      asp-action="ReferalCandidate" asp-controller="CandidateReferal" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="hidden" asp-for="OpeningId" />
                            <label asp-for="CandidateName">Candidate Name</label><span style="color:red">  *</span>
                            <input asp-for="CandidateName" class="form-control" />
                            <span asp-validation-for="CandidateName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email">Candidate Email</label><span style="color:red">  *</span>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Phone">Candidate Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ResumePath">Upload Resume</label>
                            <input type="file" id="Resume" name="Resume" class="form-control" />
                            <span asp-validation-for="ResumePath" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>