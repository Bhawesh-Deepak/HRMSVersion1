@model HRMS.Core.ReqRespVm.RequestVm.AuthenticateModel;
@{ Layout = null;}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard || Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/LoginJsCss/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/resources/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <style>
        *{font-family:'Montserrat', sans-serif !important;}
        h2{font-size:16px}
        .form-control:focus-within {
            box-shadow: 0 0 5px red !important
        }
        .btn{padding:0.20rem 0.75rem}
    </style>
</head>
<body class="bg-login" style="background:url(../LoginJsCss/images/bg-login-2.jpg) no-repeat top left; background-size:content">

    <section class="login">
        <div class="position-absolute bg-white h-100 p-md-5">
            <div class="text-center mt-5">
                <img src="~/LoginJsCss/images/logo.png" alt="" class="img-fluid">
            </div>
            <h2 class="text-center my-5 font-weight-bold">Login</h2>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="col-md-12 px-4 d-none" id="d-1">
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            }
            <div id="LoginView">
                <form class="col-md-12 px-5" asp-action="Login" asp-controller="Authenticate">

                    <div class="form-group">
                        <input type="text" asp-for="UserName" class="form-control" placeholder="Employee Code">
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12 text-right">
                            <a href="#" onclick="ForgetPassword()">Forget Password</a>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-block" id="d-2">Login</button>
                    </div>
                </form>
            </div>
            <div id="ForgetPasswordView" class="px-5" style="display:none">
                <div class="form-group">
                    <input type="text" id="txtEmpCode" class="form-control" placeholder="Employee Code">
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        <a  href="#" onclick="Login()">Login</a>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="button" onclick="SendOtp()" class="btn btn-primary btn-block" id="d-2">Send OTP</button>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

<script type="text/javascript">
    function ForgetPassword()
    {
        debugger;
        $("#ForgetPasswordView").removeAttr("style");
        $("#LoginView").attr("style", "display:none");
    }

    function Login()
    {
        $("#ForgetPasswordView").attr("style", "display:none");
        $("#LoginView").removeAttr("style");
    }

    function SendOtp() {
        var empCode = $("#txtEmpCode").val();

        let forgetPasswordUrl = "/Authenticate/ForgetPassword"

        $.get(forgetPasswordUrl, { empCode: empCode }, function (data) {
            if (data) {
                alert("OTP has been sent, Please check and login")
            } else {
                alert("Something wents wrong, Please contact admin");
            }
        })
    }


</script>

<script>
    $("#d-2").click(function () {
        $("#d-1").removeClass("d-none");;
    });
</script>