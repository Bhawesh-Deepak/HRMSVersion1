@model HRMS.Core.ReqRespVm.RequestVm.AuthenticateModel;
@{ Layout = null;}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/LoginJsCss/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <style>
        .form-control:focus-within {
            box-shadow: 0 0 5px red !important
        }
    </style>
</head>
<body class="bg-login" style="background:url(../LoginJsCss/images/bg-login-2.jpg) no-repeat top left; background-size:content">

    <section class="login">
        <div class="position-absolute bg-white h-100">
            <div class="text-center mt-5">
                <img src="~/LoginJsCss/images/logo.png" alt="" class="img-fluid">
            </div>
            <h2 class="text-center my-5 font-weight-bold">Login</h2>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="col-md-12 px-4 d-none" id="d-1">
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            }
            <form class="col-md-12 px-5" asp-action="Login" asp-controller="Authenticate">

                <div class="form-group">
                    <input type="text" asp-for="UserName" class="form-control" placeholder="Employee Code">
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="form-check-label ml-4">
                            <input type="checkbox" class="form-check-input" value="">Remember Me
                        </label>
                    </div>
                    <div class="form-group col-md-6 text-md-right">
                        <a onclick="ForgetPassword()">Forget Password</a>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block" id="d-2">Login</button>
                </div>
            </form>
        </div>
    </section>
</body>
</html>

<script type="text/javascript">
    function ForgetPassword() {
        alertify.confirm("Are you sure want to reset your  forget password ?", function () {
            alert("Forget Password page !!!");
        });
    }
</script>

<script>
    $("#d-2").click(function () {
        $("#d-1").removeClass("d-none");;
    });
</script>