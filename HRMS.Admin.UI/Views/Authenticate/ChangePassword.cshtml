@model HRMS.Core.ReqRespVm.RequestVm.ChangePasswordVm
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete"
      asp-action="ChangePasswordPost" asp-controller="Authenticate" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="OldPassword">Old Password <em>*</em></label>
                        <input class="form-control" asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="NewPassword">New Password<em>*</em></label>
                        <input class="form-control" asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password <em>*</em></label>
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">


        <button type="button" class="btn btn-default" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>