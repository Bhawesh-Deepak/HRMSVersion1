@model HRMS.Core.Entities.Reimbursement.EmployeeReimbursement

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
 
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete" enctype="multipart/form-data"
      asp-action="PostRejectReimbursement" asp-controller="EmployeeReimbursement" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description"> Description :</label><span style="color:red">  *</span>
                            <textarea class="form-control input-sm" asp-for="Description" rows="5" placeholder="Description......."></textarea>
                            <input type="hidden" asp-for="Id" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                     

                </div>
                
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="HidePopUp();">Close</button>
        <input type="submit" class="btn btn-primary  " value="Save" />
    </div>
</form>