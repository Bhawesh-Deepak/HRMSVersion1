@model IEnumerable<HRMS.Core.ReqRespVm.Response.Reimbursement.EmployeeReimbursementVM>
<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>
<div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">
        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" id="example" style="border-collapse:collapse;" aria-describedby="cp_MainContent_widgetExitEmployee_grdExitEmployees_info">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>Employee</th>
                    <th>Category</th>
                    <th>Month</th>
                    <th>Year</th>
                    <th>Invocie</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Attachment</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                <tr class="@trclass">
                    <td align="left" style="width:5%;" class="sorting_1">
                        @count
                    </td>
                    <td align="left" style="width:20%;" class="sorting_1">
                        @data.EmployeeName
                    </td>
                    <td align="left" style="width:15%;" class="sorting_1">
                        @data.Category
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Month

                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Year
                    </td>

                    <td align="left" style="width:15%;" class="sorting_1">
                        @data.Invocie
                    </td>
                    <td align="left" style="width:5%;" class="sorting_1">
                        @data.Currency
                    </td>
                    <td align="left" style="width:10%;" class="sorting_1">
                        @data.Amount
                    </td>
                    <td align="left" style="width:10%;" class="sorting_1">
                        <a href="@data.Attachment" target="_blank"><i class="fa fa-download"></i> </a>
                    </td>
                    <td align="left" style="width:10%;" class="sorting_1">
                        @if(data.Status==null || data.Status=="")
                         {
                        @:Active
                         }
                         else{
                        <span>@data.Status</span>
                         }
                    </td>

                    <td align="center" style="width:30%;" class="sorting_1">
                        <a title="Accept" class="btn btn-success btn-xs" onclick="Accept(@data.Id, this)">
                            <span class="fa fa-check"></span>
                        </a>
                        <a title="Reject" class="btn btn-danger btn-xs" onclick="Reject(@data.Id, this)">
                            <span class="fa fa-ban"></span>
                        </a>
                    </td>
                </tr>
                    count++;
                }

            </tbody>
        </table>

    </div>


</div>


<script>
    $('#example').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>