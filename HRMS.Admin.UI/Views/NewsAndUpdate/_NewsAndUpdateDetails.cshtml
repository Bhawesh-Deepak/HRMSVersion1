@model IEnumerable<HRMS.Core.ReqRespVm.Response.Master.NewsAndUpdateVM>


<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>

<div class="table-responsive">

    <div class="dataTables_wrapper" role="grid">


        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" id="example" style="border-collapse:collapse;" aria-describedby="cp_MainContent_widgetExitEmployee_grdExitEmployees_info">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>Branch</th>
                    <th>Location Type</th>
                    <th>Region</th>
                    <th>Calender Date</th>
                    <th>News</th>
                    <th>File</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                    <tr class="@trclass">
                        <td align="left" style="width:3%;" class="sorting_1">
                            @count
                        </td>
                        <td align="left" style="width:7%;" class="sorting_1">
                            @data.BranchName
                        </td>
                        <td align="left" style="width:7%;" class="sorting_1">
                            @data.LocationTypeName
                        </td>
                        <td align="left" style="width:7%;" class="sorting_1">
                            @data.RegionName
                        </td>
                        <td align="left" style="width:6%;" class="sorting_1">
                            @data.CalenderDate
                        </td>
                        <td align="left" style="width:55%;" class="sorting_1">
                            @data.News
                        </td>

                        <td align="left" style="width:5%;" class="sorting_1">
                            @if (data.UploadFile != null && data.UploadFile != "")
                            {
                                <a title="Download File" target="_blank" class="btn btn-success btn-xs" href="@data.UploadFile">
                                    <span class="fa fa-download "></span>
                                </a>
                            }

                        </td>
                        <td align="center" style="width:10%;" class="sorting_1">
                            <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.Id, this)">
                                <span class="fa fa-pencil "></span>
                            </a>
                            <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.Id, this)"><i class="fa fa-ban"></i></a>



                        </td>
                    </tr>
                    count++;
                }

            </tbody>
        </table>

    </div>


</div>


<script>
    $('#example').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>