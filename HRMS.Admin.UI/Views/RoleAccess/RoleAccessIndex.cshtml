
<div class="content-wrapper" style="min-height: 870px;">
    @Html.BuildBreadcrumbNavigation()
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title pull-left">Role Access </h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group col-md-4">
                            <select class="form-control" id="ddlRole" onchange="GetRoleDetail()" asp-items="@(new SelectList(ViewBag.Roles ,"Id","RoleName"))">
                                <option value="">--Select--</option>
                            </select>
                        </div>
                        <div id="divHRMS">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    function GetRoleDetail() {
        var roleId = $("#ddlRole").val();
        $.get("/RoleAccess/GetRoleAccess", { roleId:roleId}, function (data) {
            $("#divHRMS").html(data);
        })
    }
</script>

