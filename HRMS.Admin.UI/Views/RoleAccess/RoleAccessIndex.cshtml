@model HRMS.Core.Entities.Master.RoleMaster
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<section class="content-header">
    <h1>
        @ViewBag.HeaderTitle
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">

                    <div class="col-md-12">
                        <h3 class="box-title pull-left">Role Access </h3>
                    </div>
                </div>
                <div class="box box-body">
                    <div class="form-group col-md-4">
                        <select class="form-control" id="ddlRole" onchange="GetRoleDetail()" asp-items="@(new SelectList(ViewBag.Roles ,"Id","RoleName"))">
                            <option value="">--Select--</option>
                        </select>
                    </div>
                    <div id="divHRMS">
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<script>
    function GetRoleDetail() {
        var roleId = $("#ddlRole").val();
        $.get("/RoleAccess/GetRoleAccess", { roleId:roleId}, function (data) {
            $("#divHRMS").html(data);
        })
    }
</script>

