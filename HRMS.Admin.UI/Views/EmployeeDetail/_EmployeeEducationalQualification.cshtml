@model HRMS.Core.Entities.Payroll.EmployeeDetail

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete" enctype="multipart/form-data" class="form-group"
      asp-action="UpsertEmployee" asp-controller="EmployeeDetail" data-ajax-success="SuccessEmp">


    <input asp-for="Id" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedDate" type="hidden" />
    <input asp-for="FinancialYear" type="hidden" />
    <input asp-for="Steps" type="hidden" value="3" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EducationalQualification">Heighest Qualification:</label><span style="color:red">  *</span>
                <input type="text" asp-for="EducationalQualification" placeholder="Enter Heighest Qualification" class="form-control" />
                <span asp-validation-for="EducationalQualification" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="InstituteName">Institute Name  :</label><span style="color:red">  *</span>
                <input type="text" asp-for="InstituteName" placeholder="Enter Institute Name" class="form-control" />
                <span asp-validation-for="InstituteName" class="text-danger"></span>
            </div>

        </div>

    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>