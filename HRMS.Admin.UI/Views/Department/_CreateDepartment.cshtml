@model HRMS.Core.Entities.Master.Department

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <div class="row">
        <div class="col-md-12">
            <form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
                  data-ajax-complete="AjaxComplete"
                  asp-action="UpSertDepartment" asp-controller="Department" data-ajax-success="Success">
                <div class="box-body">

                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="CreatedBy" type="hidden" />
                            <input asp-for="CreatedDate" type="hidden" />
                            <label asp-for="Name">Department Name</label>
                            <input type="text" class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Code">Department Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-primary pull-right" value="Save" />
                        <button class="buttonload" style="display:none">
                            <i class="fa fa-refresh fa-spin"></i>Loading
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="reset" class="btn btn-danger pull-left">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>