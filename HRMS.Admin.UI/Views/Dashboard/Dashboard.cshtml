<!DOCTYPE html">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Dashboard || Subsidiary</title>
    <link href="~/resources/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/resources/Subsidiary/js/jquery.min.js"></script>
    <script src="~/resources/Subsidiary/js/script.js"></script>
    <style>
        .auto {
            margin: 20px auto;
        }

        .img-1 {
            width: 200px;
            height: 100px;
        }

        .flip-card {
            width: 270px;
            height: 170px;
            box-shadow: 0 0 10px #000;
            margin: auto;
            border-radius: 10px
        }

        .flip-card-inner {
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform .6s;
            transform-style: preserve-3d;
            border-radius: 10px
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg)
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
            padding: 15px;
            transition: .5s;
            border-radius: 10px
        }

        .flip-card-front {
            background-color: #ccc;
            color: black;
        }

        .flip-card-back {
            background-color: #2bbea1;
            color: white;
            transform: rotateY(180deg);
        }

            .flip-card-back p {
                font-size: 20px
            }

        .new {
            box-shadow: 0 0 20px #2bbea1;
        }

        .mt-5 {
            margin-top: 20px
        }

        .mb-5 {
            margin-bottom: 20px
        }

        p {
            font-size: 16px;
        }

        .btn {
            background: #2bbea1 !important;
            border: 1px solid #2bbea1 !important;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="mt-5 mb-5 col-lg-4 col-md-6 col-sm-12 col-lg-offset-4 col-md-offset-3">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="@Model.First().CompanyLogo" alt="More about Subsidiary" class="img-1" />
                            <p class="text-center mt-5">@Model.First().CompanyCode</p>
                        </div>
                        <div class="flip-card-back">
                            <p>@Model.First().CompanyName</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="mt-5 col-lg-3 col-md-6 col-sm-12 auto">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="@item.Logo" alt="More about Subsidiary" class="img-fluid" />
                                <p class="text-center pt-3">@item.Code</p>
                            </div>
                            <div class="flip-card-back">
                                <p> @item.Name</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-lg-2 col-md-6 col-sm-12 col-lg-offset-3 mt-5">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-block">Skip</a>
            </div>
            <div class="col-lg-2 col-md-6 col-sm-12 mt-5">
                <a asp-action="Index" id="btnContinue" asp-controller="Home" class="btn btn-primary btn-block disabled">Continue</a>
            </div>
            <<div class="col-lg-2 col-md-6 col-sm-12 mt-5">
                <a class="btn btn-primary btn-block">Create Legal Entity</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <script>
        $('.flip-card').click(function () {
            $('.flip-card').removeClass("new");
            $(this).addClass("new");
            $('#btnContinue').removeClass("disabled");
        })
    </script>

</body>
</html>
 


















