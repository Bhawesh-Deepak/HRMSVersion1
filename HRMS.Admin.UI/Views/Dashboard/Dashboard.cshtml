@{
    Layout = null;
}
@model IEnumerable<HRMS.Core.Entities.Organisation.Subsidiary>
@* This is partial commented for taking latest and  from server. *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/LoginJsCss/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <section class="container">
        <div class="my-5 border px-3 pb-5">

            <div class="row">
                @foreach (var data in Model)
                {
                    <a href="javascript:void" onclick="SelectSubsidry('@data.Id')">
                        <div class="col-md-4 mt-5">
                            <div class="box">
                                <img src="@data.Logo" alt="" class="img-fluid">
                                <span>@data.Name</span>
                            </div>
                        </div>
                    </a>

                }


            </div>
            <div class="row">
                <div class="col-md-1 col-3 offset-md-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-5">Skip</a>
                </div>
                <div class="col-md-1 col-3">
                    <a asp-action="Index" id="btnContinue" asp-controller="Home" class="btn btn-success mt-5 disabled">Continue</a>
                </div>
                <div class="col-md-3 col-6">
                    <a class="btn btn-primary mt-5">Create Legal Entity</a>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
<script type="text/javascript">
    function SelectSubsidry(id) {
        $("#btnContinue").removeClass().addClass("btn btn-success mt-5")
    }
</script>