@model IEnumerable<HRMS.Core.Entities.Posting.CurrentOpening>

<script src="~/resources/dist/js/jquery.dataTables.js" type="text/javascript"></script>
<div class="table-responsive">

    <div class="dataTables_wrapper" role="grid">


        <table class="table table-condensed table-striped table-hover table-bordered table-body-nowrap table-head-nowrap dataTable" cellspacing="0" rules="all" border="1" id="example" style="border-collapse:collapse;" aria-describedby="cp_MainContent_widgetExitEmployee_grdExitEmployees_info">
            <thead>
                <tr class="th-primary" role="row">
                    <th>#</th>
                    <th>Job Title</th>
                    <th>Required Exprience</th>
                    <th>Key Skills</th>
                    <th>Vacancy</th>
                    <th>Last Apply Date</th>
                    <th>Job Location</th>
                    <th>Job Description</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @{
                    int count = 1;
                    string trclass = string.Empty;
                }
                @foreach (var data in Model)
                {
                    if (count / 2 == 0)
                    {
                        trclass = "even";
                    }
                    else
                    {
                        trclass = "odd";
                    }
                <tr class="@trclass">
                    <td align="left" style="width:5%;" class="sorting_1">
                        @count
                    </td>
                    <td align="left" style="width:10%;" class="sorting_1">
                        @data.Title
                    </td>
                    <td align="left" style="width:20%;" class="sorting_1">
                        @data.RequiredExprience
                    </td>
                    <td align="left" style="width:45%;" class="sorting_1">
                        @data.KeySkills
                    </td>

                    <td align="left" style="width:45%;" class="sorting_1">
                        @data.Vacancy
                    </td>
                    <td align="left" style="width:45%;" class="sorting_1">
                        @data.LastApplyDate
                    </td>
                    <td align="left" style="width:45%;" class="sorting_1">
                        @data.Location
                    </td>
                    <td align="left" style="width:45%;" class="sorting_1">
                        <a href="@data.DescriptionPath" target="_blank"><i class="fa fa-download"></i> </a>
                        <a title="Display Job Description" onclick="DisplayIFramePDF('@data.DescriptionPath')">
                            <span class="fa fa-eye"></span>
                        </a>
                    </td>

                    <td align="center" style="width:20%;" class="sorting_1">
                        <a title="Edit" class="btn btn-primary btn-xs" onclick="UpdateRecord(@data.Id, this)">
                            <span class="fa fa-pencil "></span>
                        </a>
                        <a title="Delete" class="btn btn-xs btn-danger" onclick="Delete(@data.Id, this)"><i class="fa fa-ban"></i></a>
                      


                    </td>
                </tr>
                    count++;
                }

            </tbody>
        </table>

    </div>


</div>


<script>
    $('#example').dataTable({
        "iDisplayLength": 10,
        "bDestroy": true,
        "scrollX": true,
        "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>