@model HRMS.Core.Entities.Posting.CurrentOpening
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.0.943/pdf.min.js"></script>
<style>
    .modal.fade .modal-dialog {
        transform: translate(0);
        margin: 0 0 0 auto;
        height: 100%
    }

    .modal-content {
        height: 100%
    }

    .modal-footer {
        width: 100%;
        position: absolute;
        bottom: 0;
        right: 0;
    }
</style>
<form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
      data-ajax-complete="AjaxComplete" enctype="multipart/form-data"
      asp-action="UpSertOpening" asp-controller="CurrentOpening" data-ajax-success="Success">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EntityId">Entity </label><span style="color:red">  *</span>
                        <select asp-for="EntityId" class="form-control" asp-items="@(new SelectList(ViewBag.LegalEntity ,"Id","Name"))">
                            <option value="">--Select--</option>

                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BranchId">Branch </label><span style="color:red">  *</span>
                        <select asp-for="BranchId" class="form-control" asp-items="@(new SelectList(ViewBag.Branchs ,"Id","Name"))">
                            <option value="">--Select--</option>

                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DepartmentId">Department </label><span style="color:red">  *</span>
                        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments ,"Id","Name"))">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DesignationId">Designation </label><span style="color:red">  *</span>
                        <select asp-for="DesignationId" class="form-control" asp-items="@(new SelectList(ViewBag.Designation ,"Id","Name"))">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="DesignationId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <input asp-for="FinancialYear" type="hidden" />
                        <label asp-for="Title">Job Title</label><span style="color:red">  *</span>
                        <input type="text" class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RequiredExprience">Required Experience</label><span style="color:red">  *</span>
                        <input asp-for="RequiredExprience" class="form-control" />
                        <span asp-validation-for="RequiredExprience" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="KeySkills">Key Skills</label><span style="color:red">  *</span>
                        <input asp-for="KeySkills" class="form-control" />
                        <span asp-validation-for="KeySkills" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Vacancy">Vacancies</label><span style="color:red">  *</span>
                        <input type="number" asp-for="Vacancy" class="form-control" />
                        <span asp-validation-for="Vacancy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="OpeningDate">Opening Date</label><span style="color:red">  *</span>
                        <input asp-for="OpeningDate" class="form-control" />
                        <span asp-validation-for="OpeningDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClosingDate">Closing Date</label><span style="color:red">  *</span>
                        <input asp-for="ClosingDate" class="form-control" />
                        <span asp-validation-for="ClosingDate" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="col-md-6">
            <div class="form-group">
                <label asp-for="Location">Job Location</label><span style="color:red">  *</span>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>*@

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Job Description</label>
                        <textarea asp-for="JobDescription" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>
                </div>
