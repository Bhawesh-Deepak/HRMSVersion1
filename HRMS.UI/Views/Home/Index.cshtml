@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor;
<script src="~/resources/plugins/high-chart/js/highcharts.js"></script>
<script src="~/resources/plugins/high-chart/js/exporting.js"></script>
<script src="~/resources/plugins/high-chart/js/export-data.js"></script>
<script src="~/resources/plugins/high-chart/js/accessibility.js"></script>
<link href="~/resources/plugins/high-chart/css/highchartcustom.css" rel="stylesheet" />
<script src="~/resources/plugins/high-chart/js/data.js"></script>
<script src="~/resources/plugins/high-chart/js/highcharts-3d.js"></script>
<style>
    .calendar-basic #right {
        margin-top: 0px;
        max-height: 405px;
    }

    .tui-full-calendar-month {
        height: 100%;
        min-height: 405px;
        max-height: 405px;
    }
</style>

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Dashboard</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">DashBoard</a></li>

                    </ol>
                </div>
                <div class="col-sm-6">
                    <!-- Bookmark Start-->
                    <div class="bookmark">
                        <ul>
                            <li> <button class="btn btn-success" type="button">   Current Financial Year : @HttpContextAccessor.HttpContext.Session.GetString("financialYear")  </button></li>

                        </ul>
                    </div>
                    <!-- Bookmark Ends-->
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid calendar-basic">
        <div class="row">
            <div class="col-7">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="menu">
                                    <div id="menu-navi">
                                        <div class="menu-navi-left">
                                            <button class="btn btn-primary move-today" type="button" data-action="move-today">Today</button>
                                        </div>
                                        <div class="menu-navi-left">
                                            <button class="btn btn-success move-today btn-sm" type="button" onclick="GetHoliday();"><i class="fa fa-clock-o"> </i> Holiday</button>
                                        </div>
                                        <div class="render-range menu-navi-center" id="renderRange"></div>
                                        <div class="menu-navi-right">
                                            <button class="btn btn-primary" id="dropdownMenu-calendarType" type="button" data-bs-toggle="dropdown"><i id="calendarTypeIcon"></i><span id="calendarTypeName">Dropdown</span><i class="fa fa-angle-down"></i></button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li role="presentation"><a class="dropdown-menu-title" role="menuitem" data-action="toggle-daily"><i class="fa fa-bars"></i>Daily</a></li>
                                                <li role="presentation"><a class="dropdown-menu-title" role="menuitem" data-action="toggle-weekly"><i class="fa fa-th-large"></i>Weekly</a></li>
                                                <li role="presentation"><a class="dropdown-menu-title" role="menuitem" data-action="toggle-monthly"><i class="fa fa-th"></i>Month</a></li>
                                                <li role="presentation"><a class="dropdown-menu-title" role="menuitem" data-action="toggle-weeks2"><i class="fa fa-th-large"></i>2 weeks</a></li>
                                                <li role="presentation"><a class="dropdown-menu-title" role="menuitem" data-action="toggle-weeks3"><i class="fa fa-th-large"></i>3 weeks</a></li>
                                                <li class="dropdown-divider" role="presentation"></li>
                                                <li role="presentation">
                                                    <a role="menuitem" data-action="toggle-workweek">
                                                        <input class="tui-full-calendar-checkbox-square" type="checkbox" value="toggle-workweek" checked=""><span class="checkbox-title"></span>Show weekends
                                                    </a>
                                                </li>
                                                <li role="presentation">
                                                    <a role="menuitem" data-action="toggle-start-day-1">
                                                        <input class="tui-full-calendar-checkbox-square" type="checkbox" value="toggle-start-day-1"><span class="checkbox-title"></span>Start Week on Monday
                                                    </a>
                                                </li>
                                                <li role="presentation">
                                                    <a role="menuitem" data-action="toggle-narrow-weekend">
                                                        <input class="tui-full-calendar-checkbox-square" type="checkbox" value="toggle-narrow-weekend"><span class="checkbox-title"></span>Narrower than weekdays
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="move-btn">
                                                <button class="btn btn-primary move-day" type="button" data-action="move-prev"><i class="fa fa-angle-left" data-action="move-prev"></i></button>
                                                <button class="btn btn-primary move-day" type="button" data-action="move-next"><i class="fa fa-angle-right" data-action="move-next"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div id="right">
                                    <div id="calendar"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="card">
                    <div class="card-body" id="div_Payslip">

                    </div>
                    <div class="card" id="div_Form16">

                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">
                        <div class="row">

                            <div class="col-md-12">
                                <div id="right">
                                    <div id="container"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
<!-- Plugins JS start-->
<script src="~/wp-contents/assets/js/calendar/tui-code-snippet.min.js"></script>
<script src="~/wp-contents/assets/js/calendar/tui-time-picker.min.js"></script>
<script src="~/wp-contents/assets/js/calendar/tui-date-picker.min.js"></script>
<script src="~/wp-contents/assets/js/calendar/moment.min.js"></script>
<script src="~/wp-contents/assets/js/calendar/chance.min.js"></script>
<script src="~/wp-contents/assets/js/calendar/tui-calendar.js"></script>
<script src="~/wp-contents/assets/js/calendar/calendars.js"></script>
<script src="~/wp-contents/assets/js/calendar/schedules.js"></script>
<script src="~/wp-contents/assets/js/calendar/app.js"></script>
<script>
    $(document).ready(function () {
        $('#divLoader').modal('show');
        $.get("/Home/EmployeePayslip", {}, function (response) {
            $("#div_Payslip").html(response);
            $('#divLoader').modal('hide');
        });
        $.get("/Home/Form16", {}, function (response) {
            $("#div_Form16").html(response);
            $('#divLoader').modal('hide');
        });
        getemployeeGrossANdPI(0);

    });
    function GetHoliday() {
        $('#divLoader').modal('show');
        $.get("/Common/GetCompanyHoliday", {}, function (response) {
            $("#Div_HRMS_modal").html(response);
            $('#HeaderText').text('Holidays');
            $('#exampleModalfat').modal('show');
            $('#divLoader').modal('hide');
        });

    }
</script>
<script type="text/javascript">

    function getemployeeGrossANdPI(event) {
        $('#divLoader').modal('show');
        var Months = [];
        var Gross = [];
        var PI = [];
        $.get("/Home/getEmployeeGrossAndPI", { FinancialYear: event }, function (response) {
            debugger
            for (i = 0; i < response.length; i++) {
                Months.push(response[i].monthsName);
                Gross.push(response[i].grossSalary);
                PI.push(response[i].performanceInsentive);
            }


            var chart = Highcharts.chart('container', {

                chart: {
                    type: 'column'
                },

                title: {
                    text: 'This Year Gross Salary & Performance Insentive'
                },

                subtitle: {
                    text: ' '
                },

                //legend: {
                //    align: 'top',
                //    verticalAlign: 'middle',
                //    layout: 'vertical'
                //},

                xAxis: {
                    categories: Months,//['Apples', 'Oranges', 'Bananas'],
                    labels: {
                        x: -10
                    }
                },

                yAxis: {
                    allowDecimals: false,
                    title: {
                        text: 'Amount'
                    }
                },

                series: [{
                    name: 'Gross Salary',
                    data: Gross,//[6, 4, 2]
                }, {
                    name: 'Performance Incentive',
                    data: PI,//[8, 4, 3]
                }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                align: 'center',
                                verticalAlign: 'bottom',
                                layout: 'horizontal'
                            },
                            yAxis: {
                                labels: {
                                    align: 'left',
                                    x: 0,
                                    y: -5
                                },
                                title: {
                                    text: null
                                }
                            },
                            subtitle: {
                                text: null
                            },
                            credits: {
                                enabled: false
                            }
                        }
                    }]
                }
            });
            $('#divLoader').modal('hide');
        });
    }
</script>