@model IEnumerable<HRMS.Core.ReqRespVm.RequestVm.PaySlipVM>

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor;
@{

    var financialYears = HttpContextAccessor.HttpContext.Session.GetString("financialYear");

}

<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Hey !</strong> @Model.First().EmployeeName  would you like to download pay slip of March - @financialYears.Substring(0, 4) ?
    <a class="btn  btn-warning ml-3" asp-action="DownloadEmployeePayslip" asp-controller="Home" asp-route-DateMonth="3" asp-route-DateYear="@financialYears.Substring(0, 4)"><i class="fa fa-download"></i>Yes</a>
</div>
@foreach (var item in Model.Skip(3))
{
    <a  style="width: 25%; white-space: nowrap" asp-action="DownloadEmployeePayslip" asp-controller="Home" asp-route-DateMonth="@item.DateMonth" asp-route-DateYear="@item.DateYear" class="btn btn-labeled btn-warning m-b-5">
        <span class="btn-label"><i class="glyphicon glyphicon-download"></i></span>@item.MonthsName -@item.DateYear
    </a>
}
@foreach (var item in Model.Take(3))
{
    <a asp-action="DownloadEmployeePayslip"style="width: 25%; white-space: nowrap" asp-controller="Home" asp-route-DateMonth="@item.DateMonth" asp-route-DateYear="@item.DateYear" class="btn btn-labeled btn-warning m-b-5">
        <span class="btn-label"><i class="glyphicon glyphicon-download"></i></span>@item.MonthsName -@item.DateYear
    </a>
}
 
