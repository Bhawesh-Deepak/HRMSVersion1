@{
    int window = Convert.ToInt32(ViewBag.Window);
}

<div class="col-sm-12 col-md-12">
    <div class="panel panel-bd  ">
        <div class="panel-heading">
            <div class="panel-title">
                <h4><i class="fa fa-plus-circle"></i> Computation of TAXs By Old tax regime </h4>
            </div>
        </div>
        <div class="panel-body">
            <input type="hidden" id="hdnisWindowOpen" name="hdnisWindowOpen" value="@window" />
            <form id="form-InvestmentDeclaration" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
                  data-ajax-complete="AjaxComplete"
                  asp-action="PostInvestmentDeclaration" asp-controller="InvestmentDeclaration" data-ajax-success="Success">
                <div class="panel-group" id="accordion-1">
                    <div class="panel panel-inverse overflow-hidden">
                        @foreach (var IVGR1 in Model.GroupBy(x => x.IV1))
                        {
                            <a class="accordion-toggle accordion-toggle-styled" data-toggle="collapse" data-parent="#accordion" href="@("#collapse-" + IVGR1.FirstOrDefault().IV1)">
                                <div class="" style="padding: 10px 0px 25px 15px;margin-bottom: 2px;border: 1px solid;border-color: #cc2ac0">
                                    <div class="col-md-12">
                                        <div class="col-lg-5">
                                            <h3 class="panel-title">@IVGR1.FirstOrDefault().IV1Name</h3>
                                        </div>
                                        <div class="col-lg-4">
                                            <h3 class="panel-title">Declared (<span id="@("DeclaredAmt" + IVGR1.FirstOrDefault().IV1)">@IVGR1.Sum(x => x.DeclaredAmount)</span>)</h3>
                                        </div>
                                        <div class="col-lg-3">
                                            <h3 class="panel-title text-right"><span class="plusminus"><i class="fa fa-plus-circle"></i></span></h3>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div id="@("collapse-" + IVGR1.FirstOrDefault().IV1)" class="panel-collapse collapse" style="border: 1px solid blueviolet; margin-bottom: 5px">
                                <div class="panel-body">
                                    <h4>@IVGR1.First().IV1Name</h4>
                                    @if (IVGR1.FirstOrDefault().Description != null)
                                    {
                                        <p style="color:red">@Html.Raw(IVGR1.FirstOrDefault().Description)</p>}
                                    @if (IVGR1.FirstOrDefault().isRadiButton == 1)
                                    {
                                        <input type="radio" id="@("RdoYes"+IVGR1.First().IV1)" value="1" name="@("Radio"+IVGR1.First().IV1)" onchange="RadioButtonOnChange(this)" />
                                        <label for="@("RdoYes"+IVGR1.First().IV1)">Yes</label><br />
                                        <input type="radio" id="@("RdoNos"+IVGR1.First().IV1)" checked value="0" name="@("Radio"+IVGR1.First().IV1)" onchange="RadioButtonOnChange(this)" />
                                        <label for="@("RdoNos" + IVGR1.First().IV1)">NO</label>
                                    }

                                    <table class="table table-bordered table-striped text-center" id="@("Table"+IVGR1.First().IV1)" style="@IVGR1.FirstOrDefault().StyleSheet">
                                        <thead>
                                            <tr>
                                                @if (IVGR1.First().IV1 != 1)
                                                {
                                                    <th scope="col">@IVGR1.First().IV2Name</th>
                                                }
                                                else
                                                {
                                                    <th></th>
                                                }

                                                @if (IVGR1.First().IV1 == 1)
                                                {
                                                    <th>Month</th>
                                                }
                                                <th scope="col">
                                                    Tentative Limit<br>(
                                                    @{
                                                        decimal ComponentValue = 0;
                                                    }

                                                    @if (IVGR1.First().IV1 == 1)
                                                    {
                                                        ComponentValue = IVGR1.Sum(x => x.ComponentValue) / 24;
                                                    }

                                                    else
                                                    {
                                                        ComponentValue = IVGR1.Sum(x => x.ComponentValue);
                                                    }


                                                    @string.Format("{0:0.00}", ComponentValue)
                                                    )


                                                </th>
                                                <th scope="col">Declared (   <span id="@("DeclaredAmount" + IVGR1.FirstOrDefault().IV1)">@IVGR1.Sum(x => x.DeclaredAmount)</span> )</th>
                                                <th scope="col" style="text-align:center">Proof Entry  </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var IVGR2 in IVGR1.GroupBy(x => x.IV2))
                                            {
                                                if (IVGR2.First().IV1 == 1)
                                                {
                                                    <tr>
                                                        <td class="text-left">
                                                            @foreach (var item in IVGR2)
                                                            {
                                                                <i class="@item.checkeds"></i>@item.IV3Name<br />
                                                            }
                                                        </td>
                                                        <td class="text-left">
                                                            @IVGR2.First().IV2Name
                                                        </td>
                                                        <td><input type="number" class="form-control" value="@(string.Format("{0:0.00}",(IVGR2.First().ComponentValue/12)))" readonly></td>
                                                        <td>
                                                            @{int inc = 1;}
                                                            @foreach (var item in IVGR2)
                                                            {
                                                                if (inc == 1)
                                                                {
                                                                    <input type="number" class="@("form-control Declare"+IVGR2.First().IV1)" name="DeclaredAmount" id="@("Declared"+IVGR2.First().IV1)" data-role="@IVGR2.First().IV1" onchange="declaredchange(this);" value="@IVGR2.First().DeclaredAmount">
                                                                }
                                                                else
                                                                {
                                                                    <input type="number" style="visibility:hidden" class="@("form-control Declare"+IVGR2.First().IV1)" name="DeclaredAmount" id="@("Declared"+IVGR2.First().IV1)" data-role="@IVGR2.First().IV1" onchange="declaredchange(this);" value="0">
                                                                }
                                                                <input type="hidden" id="hdn" name="hdnIV1" value="@item.IV1" />
                                                                <input type="hidden" id="hdn" name="hdnIV2" value="@item.IV2" />
                                                                <input type="hidden" id="hdn" name="hdnIV3" value="@item.IV3" />
                                                                <input type="hidden" id="hdnlocationId" name="hdnlocationId" value="@item.LocationId">
                                                                inc++;
                                                            }
                                                        </td>
                                                        <td>
                                                            <div id="@("divProof" + IVGR2.First().IV3)">
                                                                @if (IVGR2.First().ProofUrl == null || IVGR2.First().ProofUrl == "")
                                                                {
                                                                    <button type="button" class="btn btn-primary btn-mini waves-effect waves-light" onclick="AddProof(@IVGR2.First().IV3);"><i class="fa fa-plus"></i>   </button>

                                                                }
                                                                else
