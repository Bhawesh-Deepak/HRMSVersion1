                                                                    <a class="btn btn-danger btn-sm" onclick="DeleteUploadedProof(@IVGR2.First().IV3);" href="#" title="Delete Proof"> <i class="fa fa-close"></i></a>

                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    foreach (var item in IVGR2)
                                                    {
                                                        <tr>
                                                            <td class="text-left">
                                                                @if (item.isRadio == 1)
                                                                {
                                                                    <input type="radio" name="@("radio" +item.IV1)" id="@("radio" +item.IV1+item.IV2+ item.IV3)" onchange="RadioBindValue(this.id)" value="@item.Value" />
                                                                    <label for="@("radio" + item.IV3)">@Html.Raw(item.IV3Name)</label>
                                                                }
                                                                else if (item.isRadio == 2)
                                                                {
                                                                    <input type="checkbox" id="@("checkbox" +item.IV1+item.IV2+ item.IV3)" onchange="CheckBoxTextEnable(this.id)" />
                                                                    <label for="@("checkbox" + item.IV1 + item.IV2 + item.IV3)">@Html.Raw(item.IV3Name)</label>
                                                                }
                                                                else if (item.isRadio == 3)
                                                                {
                                                                    <input type="checkbox" id="@("checkbox"+ 1)" />
                                                                    <label for="@("checkbox" + 1)">1. Value of the house should be Rs 50 lakhs or less</label><br />
                                                                    <input type="checkbox" id="@("checkbox"+ 2)" />
                                                                    <label for="@("checkbox" + 2)"> 2. Loan taken for the house must be Rs 35 lakhs or less</label><br />
                                                                    <input type="checkbox" id="@("checkbox"+ 3)" />
                                                                    <label for="@("checkbox" +3)">The loan must be sanctioned by a Financial Institution or a Housing Finance Company</label><br />
                                                                    <input type="checkbox" id="@("checkbox"+ 4)" />
                                                                    <label for="@("checkbox" + 4)">The loan must be sanctioned between 01.04.2016 to 31.03.2017</label><br />
                                                                    <input type="checkbox" id="@("checkbox"+ 5)" />
                                                                    <label for="@("checkbox" + 5)">5. As on the date of the sanction of loan, no other house property must be owned by you.</label><br />
                                                                }
                                                                else
                                                                {
                                                                    @Html.Raw(item.IV3Name)
                                                                }
                                                            </td>
                                                            <td><input type="number" class="form-control" name="Tentative" id="@("Tentative" + item.IV1 + item.IV2 + item.IV3)" value="@((item.ComponentValue))" readonly></td>
                                                            <td>
                                                                <input type="number" name="DeclaredAmount" class="@("form-control Declare"+IVGR2.First().IV1)" id="@("Declared" + item.IV1 + item.IV2 + item.IV3)" @item.isReadonly data-role="@IVGR2.First().IV1" onchange="declaredchange(this);" value="@item.DeclaredAmount">
                                                                <input type="hidden" id="hdn" name="hdnIV1" value="@item.IV1" />
                                                                <input type="hidden" id="hdn" name="hdnIV2" value="@item.IV2" />
                                                                <input type="hidden" id="hdn" name="hdnIV3" value="@item.IV3" />
                                                                <input type="hidden" id="hdnlocationId" name="hdnlocationId" value="@item.LocationId">
                                                            </td>
                                                            <td>
                                                                <div id="@("divProof"+item.IV3)">
                                                                    @if (item.ProofUrl == null || item.ProofUrl == "")
                                                                    {
                                                                        <button type="button" class="btn btn-primary btn-mini waves-effect waves-light" onclick="AddProof(@item.IV3);"><i class="fa fa-plus"></i>   </button>

                                                                    }
                                                                    else
                                                                    {


                                                                        <button type="button" class="btn btn-primary btn-mini waves-effect waves-light" onclick="AddProof(@item.IV3);"><i class="fa fa-plus"></i>   </button>
                                                                        <a class="btn btn-info btn-sm " title="Download Proof" asp-controller="InvestmentDeclaration" asp-action="DownloadProof" asp-route-IV3="@IVGR2.First().IV3"> <i class="fa fa-download"></i></a>
                                                                        <a class="btn btn-danger btn-sm" onclick="DeleteUploadedProof(@item.IV3);" href="#" title="Delete Proof"> <i class="fa fa-close"></i></a>

                                                                    }
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }

                                                }

                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="form-title">
                    <div class="row">
                        <label class="col-sm-10"></label>
                        <div class="col-sm-2">
                            @if (window == 1)
                            {
                                <button class="btn btn-primary btn-square" type="button" id="btn-SubmitInvestment" onclick="ShowAgrrement();"> <i class="fa fa-plus"></i>  Submit</button>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




