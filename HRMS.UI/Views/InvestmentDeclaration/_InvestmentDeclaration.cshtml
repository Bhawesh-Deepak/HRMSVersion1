                $("#DeclaredAmount" + dataroleid).text(parseFloat(actval).toFixed(1));
            }
            else {
                var actval = 0;
                $(".Declare" + dataroleid).each(function () {
                    actval += parseInt($(this).val());
                });
                $("#DeclaredAmt" + dataroleid).text(parseFloat(actval).toFixed(1));
                $("#DeclaredAmount" + dataroleid).text(parseFloat(actval).toFixed(1));
            }
        }
        else if (dataroleid == 10) {
            $('#Lender-Detail-Modal').show();
        }
        else {
            debugger;
