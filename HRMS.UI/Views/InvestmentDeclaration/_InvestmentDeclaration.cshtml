<script>
    $(document).ready(function () {

        if ($("#hdnisWindowOpen").val() == 0) {
            $('#modal-isWindowOpen').show();
        }
    });
    function RadioButtonOnChange(event) {
        var id = event.id.substring(6);
        if ($(event).val() == 1) {
            $("#Table" + id).show('slow');
        }
        else {
            $(".Declare" + id).each(function () {
                $(this).val(0);
            });

            $("#Table" + id).hide('slow');
        }
    }
    function CheckBoxTextEnable(event) {

        var id = event.substring(8);
        if (event == 'checkbox62949') {
            if ($("#checkbox62949").prop('checked')) {
                $("#Declared" + id).removeAttr("readonly");
                $("input[type=radio][name=radio6]").prop('checked', false);
                $(".Declare" + 6).each(function () {
                    $(this).val(0);
