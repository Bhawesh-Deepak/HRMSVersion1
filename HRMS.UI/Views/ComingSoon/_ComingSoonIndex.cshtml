@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor;
@using HRMS.UI.Helpers;
@using HRMS.Core.Entities.Organisation;

@{
    var companyDetails = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<Company>("companyDetails");

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@companyDetails.Name</title>
    <link rel="shortcut icon" href="@companyDetails.FavIcon" type="image/x-icon" />
    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <!-- Font Awesome-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/fontawesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/feather-icon.css">
    <!-- Plugins css start-->
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/wp-contents/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/wp-contents/assets/css/responsive.css">
</head>
<body>
    <!-- Loader starts-->
    <div class="loader-wrapper">
        <div class="theme-loader">
            <div class="loader-p"></div>
        </div>
    </div>
    <!-- Loader ends-->
    <!-- page-wrapper Start-->
    <div class="page-wrapper" id="pageWrapper">
        <!-- Page Body Start-->
        <div class="container-fluid p-0">
            <div class="comingsoon auth-bg-video">
                <video class="bgvideo-comingsoon" id="bgvid" poster="~/wp-contents/assets/images/other-images/coming-soon-bg.jpg" playsinline="" autoplay="" muted="" loop="">
                    <source src="~/wp-contents/assets/video/auth-bg.mp4" type="video/mp4">
                </video>
                <div class="comingsoon-inner text-center">
                    <a asp-action="Index" asp-controller="Home"><img src="@companyDetails.Logo" alt=""></a>
                    <h3>@companyDetails.Name</h3>
                    <h5>WE ARE COMING SOON</h5>
                    <div class="countdown" id="clockdiv">
                        <ul>
                            <li><span class="time digits" id="days"></span><span class="title">days</span></li>
                            <li><span class="time digits" id="hours"></span><span class="title">Hours</span></li>
                            <li><span class="time digits" id="minutes"></span><span class="title">Minutes</span></li>
                            <li><span class="time digits" id="seconds"></span><span class="title">Seconds</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- latest jquery-->
    <script src="~/wp-contents/assets/js/jquery-3.5.1.min.js"></script>
    <!-- feather icon js-->
    <script src="~/wp-contents/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="~/wp-contents/assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- Sidebar jquery-->
    <script src="~/wp-contents/assets/js/sidebar-menu.js"></script>
    <script src="~/wp-contents/assets/js/config.js"></script>
    <!-- Bootstrap js-->
    <script src="~/wp-contents/assets/js/bootstrap/popper.min.js"></script>
    <script src="~/wp-contents/assets/js/bootstrap/bootstrap.min.js"></script>
    <!-- Plugins JS start-->
    <script src="~/wp-contents/assets/js/countdown.js"></script>
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="~/wp-contents/assets/js/script.js"></script>
    <!-- login js-->
    <!-- Plugin used-->
</body>
</html>
 
 