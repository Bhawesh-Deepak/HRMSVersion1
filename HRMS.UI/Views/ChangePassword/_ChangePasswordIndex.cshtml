@model HRMS.Core.ReqRespVm.RequestVm.ChangePasswordVm
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <div class="page-body">
        <div class="container-fluid">
            <div class="page-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Change Password</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li class="breadcrumb-item">Change Password</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-xl-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header pb-0">
                                    <h5>Change Password</h5>
                                </div>
                                <div class="card-body">
                                    <form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
                                          data-ajax-complete="AjaxComplete"
                                          asp-action="ChangePasswordPost" asp-controller="ChangePassword" data-ajax-success="Success">

                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="OldPassword">Old Password <em class="text-danger">*</em></label>
                                                    <input class="form-control" asp-for="OldPassword" />
                                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="NewPassword">New Password<em class="text-danger">*</em></label>
                                                    <input class="form-control" asp-for="NewPassword" />
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="ConfirmPassword">Confirm Password <em class="text-danger">*</em></label>
                                                    <input class="form-control" asp-for="ConfirmPassword" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>

                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group pull-right">
                                                    <br />
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>

                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
