@model HRMS.Core.ReqRespVm.RequestVm.ChangePasswordVm
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="content-wrapper">
    <section class="content-header">
        <div class="header-icon">
            <i class="pe-7s-lock"></i>
        </div>
        <div class="header-title">
            <h1>Change Password </h1>
            <small>Employee Dashboard</small>
            <ol class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home"><i class="pe-7s-home"></i> Home</a></li>
                <li class="active">Change Password</li>
            </ol>
        </div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="panel panel-bd  ">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>
                                <i class="fa fa-unlock-alt"></i> Change Password

                            </h4>

                        </div>
                    </div>
                    <div class="panel-body">
                        <form id="form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-begin="AjaxOnBegin"
                              data-ajax-complete="AjaxComplete"
                              asp-action="ChangePasswordPost" asp-controller="ChangePassword" data-ajax-success="Success">

                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="OldPassword">Old Password <em class="text-danger">*</em></label>
                                        <input class="form-control" asp-for="OldPassword" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="NewPassword">New Password<em class="text-danger">*</em></label>
                                        <input class="form-control" asp-for="NewPassword" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword">Confirm Password <em class="text-danger">*</em></label>
                                        <input class="form-control" asp-for="ConfirmPassword" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group pull-right">
                                        <br />
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>


        </div>

    </section>
</div>
