@model IEnumerable<HRMS.Core.ReqRespVm.Response.Reimbursement.EmployeeReimbursementVM>


<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Reimbursement </h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item">Reimbursement</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-xl-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header pb-0">
                                <h5>Reimbursement List</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="display dataTable" id="basic-3">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Employee</th>
                                                <th>Category</th>
                                                <th>Month</th>
                                                <th>Year</th>
                                                <th>Invocie</th>
                                                <th>Currency</th>
                                                <th>Amount</th>
                                                <th>Attachment</th>
                                                <th>Status</th>
                                                @*<th>Action</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int count = 1;
                                                string trclass = string.Empty;
                                            }
                                            @foreach (var data in Model)
                                            {
                                                if (count / 2 == 0)
                                                {
                                                    trclass = "even";
                                                }
                                                else
                                                {
                                                    trclass = "odd";
                                                }
                                                <tr class="@trclass">
                                                    <td align="left" style="width:5%;" class="sorting_1">
                                                        @count
                                                    </td>
                                                    <td align="left" style="width:20%;" class="sorting_1">
                                                        @data.EmployeeName
                                                    </td>
                                                    <td align="left" style="width:15%;" class="sorting_1">
                                                        @data.Category
                                                    </td>
                                                    <td align="left" style="width:5%;" class="sorting_1">
                                                        @data.Month

                                                    </td>
                                                    <td align="left" style="width:5%;" class="sorting_1">
                                                        @data.Year
                                                    </td>

                                                    <td align="left" style="width:15%;" class="sorting_1">
                                                        @data.Invocie
                                                    </td>
                                                    <td align="left" style="width:5%;" class="sorting_1">
                                                        @data.Currency
                                                    </td>
                                                    <td align="left" style="width:10%;" class="sorting_1">
                                                        @data.Amount
                                                    </td>
                                                    <td align="left" style="width:10%;" class="sorting_1">
                                                        <a href="@data.Attachment" target="_blank"><i class="fa fa-download"></i> </a>
                                                    </td>
                                                    <td align="left" style="width:10%;" class="sorting_1">
                                                        @if (data.Status == null || data.Status == "")
                                                        {
                                                            @:Active
                                                        }
                                                        else
                                                        {
                                                            <span>@data.Status</span>
                                                        }
                                                    </td>

                                                    @*<td align="center" style="width:30%;" class="sorting_1">
                                                        <a title="Accept" class="btn btn-success btn-xs" onclick="Accept(@data.Id, this)">
                                                            <span class="fa fa-check"></span>
                                                        </a>
                                                        <a title="Reject" class="btn btn-danger btn-xs" onclick="Reject(@data.Id, this)">
                                                            <span class="fa fa-ban"></span>
                                                        </a>
                                                    </td>*@
                                                </tr>
                                                count++;
                                            }

                                        </tbody>
                                    </table>
                                </div>
              

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>